<%- include('partials/head', { pageTitle: pageTitle }) %>
<%- include('partials/navbar', { navTitle: navTitle }) %>

<div class="main-container input-page tiktok-page">
    <div class="hero-section">
        <div class="hero-content">
            <i class="fab fa-tiktok hero-icon-tiktok"></i>
            <h1>TikTok Downloader</h1>
            <p class="hero-tagline"><%= tagline %></p>
            
            <form action="/download/tiktok" method="POST" class="input-form modern-input-form">
                <div class="form-group">
                    <i class="fas fa-link icon-input"></i>
                    <input type="text" name="url" id="tiktokUrl" placeholder="Tempelkan link TikTok di sini..." required>
                    <button type="submit" class="btn-submit-icon">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </form>
            <div class="loader-container" id="tiktokLoaderContainer" style="display:none;">
                <div class="loader"></div>
                <span>Memproses link TikTok...</span>
            </div>
             <p class="input-hint">Unduh video, foto, atau slide tanpa watermark!</p>
        </div>
        <div class="hero-decoration">
            <div class="shape shape-1"></div>
            <div class="shape shape-2"></div>
            <div class="shape shape-3"></div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>