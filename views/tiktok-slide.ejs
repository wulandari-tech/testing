<%- include('partials/head', { pageTitle: pageTitle }) %>
<%- include('partials/navbar', { navTitle: navTitle }) %>

<div class="main-container input-page tiktok-slide-page">
     <div class="hero-section">
        <div class="hero-content">
            <i class="fas fa-photo-film hero-icon-slide"></i>
            <h1>TikTok Slide Downloader</h1>
            <p class="hero-tagline"><%= tagline %></p>
            <form action="/download/tiktok" method="POST" class="input-form modern-input-form">
                <div class="form-group">
                    <i class="fas fa-link icon-input"></i>
                    <input type="text" name="url" id="tiktokUrlSlide" placeholder="Tempelkan link TikTok slide di sini..." required>
                     <button type="submit" class="btn-submit-icon">
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
            </form>
            <div class="loader-container" id="tiktokSlideLoaderContainer" style="display:none;">
                <div class="loader"></div>
                 <span>Memproses link slide...</span>
            </div>
            <p class="input-hint">Dapatkan semua gambar dari postingan slide TikTok.</p>
        </div>
         <div class="hero-decoration">
            <div class="shape shape-1 alt-color"></div>
            <div class="shape shape-2 alt-color"></div>
            <div class="shape shape-3 alt-color"></div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>